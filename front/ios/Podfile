# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'front' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # ✅ Google Maps SDK 추가
  pod 'GoogleMaps'
  pod 'Google-Maps-iOS-Utils'

  # ✅ AirGoogleMaps 추가
  pod 'react-native-google-maps', :path => '../node_modules/react-native-maps', :modular_headers => true

  # ✅ react-native-permissions 추가 (중복 방지)
  pod 'RNPermissions', :path => '../node_modules/react-native-permissions'


  # ✅ react-native-permissions의 각 권한 모듈 추가
    permissions_path = '../node_modules/react-native-permissions/ios'
    pod 'Permission-LocationWhenInUse', :path => "#{permissions_path}/LocationWhenInUse"  # 📍 위치 권한 필수 추가
    pod 'Permission-Camera', :path => "#{permissions_path}/Camera"                        # 📸 카메라
    pod 'Permission-PhotoLibrary', :path => "#{permissions_path}/PhotoLibrary"            # 🖼️ 갤러리
    pod 'Permission-Notifications', :path => "#{permissions_path}/Notifications"          # 🔔 알림


  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
  end
end
